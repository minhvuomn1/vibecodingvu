<?xml version="1.0" encoding="UTF-8"?>
<LightningComponentBundle xmlns="http://soap.sforce.com/2006/04/metadata">
    <apiVersion>61.0</apiVersion>
    <isExposed>true</isExposed>
    <masterLabel>Color Toggle Button</masterLabel>
    <description>LWC có nút đổi màu khi click</description>
    <targets>
        <target>lightning__AppPage</target>
        <target>lightning__RecordPage</target>
        <target>lightning__HomePage</target>
        <target>lightning__Tab</target>
        <target>lightning__UtilityBar</target>
        <target>lightning__FlowScreen</target>
    </targets>
    <targetConfigs>
        <targetConfig targets="lightning__RecordPage">
            <objects>
                <object>Account</object>
                <object>Contact</object>
                <object>Opportunity</object>
                <object>Case</object>
            </objects>
        </targetConfig>
        <targetConfig targets="lightning__FlowScreen">
            <property name="label" type="String" label="Nhãn nút" description="Ghi đè nhãn hiển thị trên nút (mặc định: Đổi màu)"/>
        </targetConfig>
    </targetConfigs>
</LightningComponentBundle>
